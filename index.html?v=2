            <form id="orderForm">
                <div class="form-group">
                    <label for="sku">Product SKU <span class="required">*</span></label>
                    <select id="sku" name="sku" required>
                        <option value="">-- Select a Product --</option>
                        <option value="TS-BLK-S">Classic T-Shirt - Black - S</option>
                        <option value="TS-BLK-M">Classic T-Shirt - Black - M</option>
                        <option value="TS-BLU-M">Classic T-Shirt - Blue - M</option>
                        <option value="JN-BLU-30">Denim Jeans - Blue - 30</option>
                        <option value="JN-BLU-32">Denim Jeans - Blue - 32</option>
